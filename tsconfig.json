{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "lib": ["WebWorker", "DOM"],
      "paths": {
        "~/*": ["./.vitepress/vitepress/*"],
        "@/demo": ["./examples/*"]
      },
      "types": ["../packages/kviewui/components", "@kviewui/types", "@types/node"],
      "jsx": "preserve"
    },
    "include": ["**/*", "docs/.vitepress/**/*.ts"],
    "exclude": ["node_modules"]
  }
  